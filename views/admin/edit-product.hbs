<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <h2 class="text-center">Add Dealer</h2>
<form action="/admin/edit-product/{{dealer._id}}" method="POST" enctype="multipart/form-data">
  
    <label for="">Name</label>
    <input type="text" name="Name" class="form-control" value="{{dealer.Name}}"

    <label for="">Store Name</label>
    <input type="text" name="S_name" class="form-control" value="{{dealer.S_name}}">

    <label for="">Location</label>
    <input type="text" name="Location" class="form-control" value="{{dealer.Location}}">

    <label for="">Contact Information</label>
    <input type="text" name="C_information" class="form-control" value="{{dealer.C_information}}">

    <label for="">Image</label>
    <img src="/product-image/{{dealer._id}}.jpg" style="width: 100px; height:auto" id="imgView" class="pt-3">
    <input type="file" name="Image"  class="form-control" onchange="viewImage(event)">
 
  <button type="submit" class="btn btn-success">Submit</button>
</form>
            </div>
        </div>

    </div>
</section>

<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>
