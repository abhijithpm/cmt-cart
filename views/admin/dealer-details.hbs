<section>
    <div class="container">
        <div class="row mt-4 ">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Dealer</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Store Name</th>
      <th scope="col">Location</th>
      <th scope="col">Contact Information</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.S_name}}</td>
      <td>{{this.Location}}</td>
      <td>{{this.C_information}}</td>
      <td><img style="width: 50px;height:50px " src="/product-image/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
        
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>