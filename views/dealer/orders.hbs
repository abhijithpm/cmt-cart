<section>
    <div class="container">
        <div class="row mt-4 ">
            <a href="/dealer/add-product" class="btn btn-success ml-auto">Add product</a>
        </div>
        
        <br>
        
        <div class="card" style="border:none">
          
          <div class="card-body">
            	<h2>Orders</h2>
        <table class="table bg-light table-borderless">
  <thead>
    <tr>
     
      <th scope="col">Product</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">Total</th>
      <th scope="col">Address</th>
      
    </tr>
  </thead>
  
  <tbody>
      {{#each orderDetails}}
    <tr>
            <td>{{this.product.Name}}</td>
                  <td>{{this.product.Price}}</td>
                  <td>{{this.quantity}}</td>
              
              <td>{{this.totalAmount}}</td>

      <td>{{this.name}} {{this.deliveryDetails.address}} {{this.deliveryDetails.pincode}}</td>

              <td>{{this.paymentMethod}}</td>
           

    

      
      
     
        

       <td>
        <a href="/dealer/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/dealer/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
        
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
</div>
    </div>
</section>